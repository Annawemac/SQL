SELECT count(*) FROM "netflix_people"

SELECT people.show_id, people.director, 
titles.type, 
titles.title
FROM "netflix_people" people 
LEFT OUTER JOIN "netflix_titles_info" titles
ON people.show_id = titles.show_id

SELECT count(*) FROM "netflix_titles_info" WHERE type= 'Movie';

SELECT MAX(date(date_added)) FROM "netflix_titles_info"; 

SELECT title FROM "netflix_titles_info" ORDER BY title asc; 

SELECT director
FROM "netflix_titles_info" titles
LEFT JOIN "netflix_people" people 
ON titles.show_id = people.show_id
WHERE titles.title = 'The Starling' 

SELECT title, release_year
FROM "netflix_titles_info"
WHERE type= 'Movie'
ORDER BY release_year asc
LIMIT 1; 
